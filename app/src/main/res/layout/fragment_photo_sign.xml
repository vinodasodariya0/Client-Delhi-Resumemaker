<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="@dimen/lrtbp_25"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="@dimen/lrtbp_15"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="10.0dip"
                    app:cardElevation="@dimen/lrtbp_5">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="@dimen/lrtbp_25"
                        android:layout_marginBottom="@dimen/lrtbp_20"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/skill_add"
                            android:layout_margin="@dimen/lrtbp_5"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="@dimen/wh_2"
                                android:layout_marginLeft="@dimen/lrtbp_15"
                                android:layout_weight="1.0"
                                android:background="#ffd6d4d4" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.25"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0"
                                    android:gravity="center"
                                    android:padding="@dimen/lrtbp_5"
                                    android:text="Photo"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="@dimen/wh_2"
                                android:layout_marginRight="@dimen/lrtbp_15"
                                android:layout_weight="1.0"
                                android:background="#ffd6d4d4" />
                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/image_card"
                            android:layout_width="100.0dip"
                            android:layout_height="100.0dip"
                            android:layout_margin="@dimen/lrtbp_10"
                            android:padding="@dimen/lrtbp_10"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardCornerRadius="10.0dip"
                            app:cardElevation="@dimen/lrtbp_5">

                            <ImageView
                                android:id="@+id/image"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/lrtbp_10" />
                        </androidx.cardview.widget.CardView>

                        <ImageView
                            android:id="@+id/delete_photo"
                            android:layout_width="@dimen/lrtbp_25"
                            android:layout_height="@dimen/lrtbp_25"
                            android:layout_gravity="center"
                            android:src="@drawable/cancel" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/lrtbp_5"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="@dimen/wh_2"
                                android:layout_marginLeft="@dimen/lrtbp_15"
                                android:layout_weight="1.0"
                                android:background="#ffd6d4d4" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="@dimen/lrtbp_5"
                                    android:text="Signature"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="@dimen/wh_2"
                                android:layout_marginRight="@dimen/lrtbp_15"
                                android:layout_weight="1.0"
                                android:background="#ffd6d4d4" />
                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/sign_card"
                            android:layout_width="fill_parent"
                            android:layout_height="100.0dip"
                            android:layout_margin="@dimen/lrtbp_10"
                            android:padding="@dimen/lrtbp_10"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardCornerRadius="10.0dip"
                            app:cardElevation="@dimen/lrtbp_5">

                            <ImageView
                                android:id="@+id/sign_image"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/lrtbp_5" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/sign_txt_card"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/lrtbp_10"
                                android:visibility="gone"
                                app:cardBackgroundColor="@android:color/white"
                                app:cardCornerRadius="5.0dip">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:padding="@dimen/lrtbp_5">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/lrtbp_5"
                                        android:text="Click to draw your sign"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                        android:textColor="@color/black"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </androidx.cardview.widget.CardView>

                        <ImageView
                            android:id="@+id/delete_sign"
                            android:layout_width="@dimen/lrtbp_25"
                            android:layout_height="@dimen/lrtbp_25"
                            android:layout_gravity="center"
                            android:src="@drawable/cancel" />

                        <Button
                            android:id="@+id/photo_save"
                            android:layout_width="@dimen/wh_120"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/lrtbp_10"
                            android:background="@drawable/red"
                            android:padding="@dimen/lrtbp_10"
                            android:text="Save"
                            android:textColor="#ffffffff"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/wh_50"
                android:layout_marginTop="@dimen/wh_20"
                android:layout_marginRight="@dimen/wh_50"
                android:layout_marginBottom="@dimen/wh_2"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="20.0dip"
                app:cardElevation="@dimen/lrtbp_5">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/lrtbp_5">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="Photo &amp; Sign"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>