<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#72000000">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10.0dip"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="10.0dip"
                app:cardElevation="5.0dip">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#ff498e8c"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5.0dip">

                        <TextView
                            android:id="@+id/cp_accent_title"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:padding="10.0dip"
                            android:text="RENAME AS RESUME"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/saveit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10.0dip"
                        android:text="File path : Nithra/ResumeBuilder/yourfilename.pdf"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@color/pink"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="250.0dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="10.0dip"
                        android:background="@drawable/border"
                        android:padding="5.0dip">

                        <EditText
                            android:id="@+id/edit1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890 "
                            android:hint="Enter your filename... "
                            android:inputType="textCapSentences"
                            android:singleLine="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/edit1"
                        android:padding="10.0dip"
                        android:text="*Special characters not allowed ex:(,/.*-+ etc...)"
                        android:textColor="#ff000000"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="20.0dip">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10.0dip"
                            android:layout_weight="1.0"
                            app:cardBackgroundColor="@color/colorPrimary2"
                            app:cardCornerRadius="5.0dip">

                            <LinearLayout
                                android:id="@+id/ex_declar"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:gravity="center"
                                android:padding="5.0dip">

                                <TextView
                                    android:id="@+id/cancel"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="2.0dip"
                                    android:gravity="center"
                                    android:text="Cancel"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|right"
                            android:layout_margin="10.0dip"
                            android:layout_weight="1.0"
                            app:cardBackgroundColor="@color/colorPrimary2"
                            app:cardCornerRadius="5.0dip"
                            app:cardElevation="5.0dip">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:gravity="center"
                                android:padding="5.0dip">

                                <TextView
                                    android:id="@+id/ok"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/saveit"
                                    android:layout_alignParentRight="true"
                                    android:gravity="center"
                                    android:text="Save"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>