<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#88000000"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="10.0dip"
        app:cardElevation="16.0dip">

        <nithra.resume.maker.cv.builder.app.BoxLoaderView
            android:id="@+id/boxer"
            android:layout_width="@dimen/wh_70"
            android:layout_height="@dimen/wh_70"
            app:loaderColor="#ff74f75a"
            app:speed="5"
            app:strokeColor="#ff3aa137"
            app:strokeWidth1="20" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/lrtbp_5"
        android:text="Generating please wait..."
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        android:textStyle="bold" />
</LinearLayout>