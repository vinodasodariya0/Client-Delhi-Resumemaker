<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/lrtbp_5"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="5.0dip"
        app:cardElevation="@dimen/lrtbp_5">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="@dimen/wh_70"
                android:layout_height="@dimen/wh_70"
                android:layout_margin="@dimen/lrtbp_5" />

            <View
                android:layout_width="@dimen/wh_2"
                android:layout_height="fill_parent"
                android:layout_margin="@dimen/lrtbp_5"
                android:background="#ffc9c8c8" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/v_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/lrtbp_5"
                    android:text="Ranjith"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#ff000000"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/go"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:layout_gravity="center|right"
                android:src="@drawable/go" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="@dimen/wh_20"
                    android:layout_height="@dimen/wh_20"
                    android:layout_margin="@dimen/lrtbp_10"
                    android:src="@drawable/trash" />

                <ImageView
                    android:id="@+id/copy"
                    android:layout_width="@dimen/wh_20"
                    android:layout_height="@dimen/wh_20"
                    android:layout_margin="@dimen/lrtbp_10"
                    android:src="@drawable/copy"
                    android:tint="@color/gradientCloudy_c1" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>