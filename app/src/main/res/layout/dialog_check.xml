<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#88000000"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/lrtbp_30"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="10.0dip"
        app:cardElevation="16.0dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:padding="@dimen/lrtbp_5"
                android:text="Choose your options"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/lrtbp_10"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/photo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_line"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/wh_40"
                        android:layout_height="@dimen/wh_40"
                        android:padding="@dimen/lrtbp_10"
                        android:src="@drawable/man" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="  Photo"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/lrtbp_5"
                        android:padding="@dimen/lrtbp_5"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="10.0dip"
                        app:cardElevation="@dimen/wh_2">

                        <CheckBox
                            android:id="@+id/photo_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/lrtbp_5"
                            android:button="@drawable/custom_check"
                            android:checked="true" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sign"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_line"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/wh_40"
                        android:layout_height="@dimen/wh_40"
                        android:padding="@dimen/lrtbp_10"
                        android:src="@drawable/sign" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="  Signature"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/lrtbp_5"
                        android:padding="@dimen/lrtbp_5"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="10.0dip"
                        app:cardElevation="@dimen/wh_2">

                        <CheckBox
                            android:id="@+id/sign_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/lrtbp_5"
                            android:button="@drawable/custom_check"
                            android:checked="true" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sign_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_line"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/wh_40"
                        android:layout_height="@dimen/wh_40"
                        android:padding="@dimen/lrtbp_10"
                        android:src="@drawable/sign_name" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="  Signature name"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/lrtbp_5"
                        android:padding="@dimen/lrtbp_5"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="10.0dip"
                        app:cardElevation="@dimen/wh_2">

                        <CheckBox
                            android:id="@+id/sign_name_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/lrtbp_5"
                            android:button="@drawable/custom_check"
                            android:checked="true" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cover"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_line"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/wh_40"
                        android:layout_height="@dimen/wh_40"
                        android:padding="@dimen/lrtbp_10"
                        android:src="@drawable/cover_ic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="  Cover Letter"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/lrtbp_5"
                        android:padding="@dimen/lrtbp_5"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="10.0dip"
                        app:cardElevation="@dimen/wh_2">

                        <CheckBox
                            android:id="@+id/cover_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/lrtbp_5"
                            android:button="@drawable/custom_check"
                            android:checked="false" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/preview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/lrtbp_10"
                    app:cardBackgroundColor="@color/gradientCloudy_c3"
                    app:cardCornerRadius="5.0dip">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:padding="@dimen/lrtbp_5">

                        <ImageView
                            android:layout_width="@dimen/lrtbp_25"
                            android:layout_height="@dimen/lrtbp_25"
                            android:src="@drawable/preview_ic"
                            android:tint="@color/white" />

                        <TextView
                            android:id="@+id/generat_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/wh_2"
                            android:text="Preview"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>