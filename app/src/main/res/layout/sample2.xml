                            app:cardCornerRadius="5.0dip"
                            app:cardElevation="@dimen/lrtbp_5">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="@dimen/lrtbp_5">

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.75"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/lrtbp_5"
                                        android:text="Free Plan"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                        android:textColor="@color/red"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/lrtbp_5"
                                        android:text="Valid Once per user for single district"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                        android:textColor="@color/black"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/lrtbp_5"
                                        android:text="Valid: 7 Days"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                        android:textColor="@color/black"
                                        android:textStyle="bold" />

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_gravity="center"
                                        android:layout_margin="@dimen/lrtbp_5"
                                        app:cardBackgroundColor="@android:color/holo_red_light"
                                        app:cardCornerRadius="@dimen/lrtbp_10"
                                        app:cardElevation="@dimen/lrtbp_5">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="@dimen/lrtbp_5"
                                            android:text="      Pay     "
                                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                            android:textColor="@color/white"
                                            android:textStyle="bold" />
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>

                                <TextView
                                    android:layout_width="@dimen/wh_2"
                                    android:layout_height="fill_parent"
                                    android:layout_margin="@dimen/lrtbp_5"
                                    android:background="@color/red" />

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.78"
                                    android:text="RS: 0 /-"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                    android:textColor="@color/red"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/lrtbp_5"
                            android:layout_weight="1.0"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardCornerRadius="5.0dip"
                            app:cardElevation="@dimen/lrtbp_5">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="@dimen/lrtbp_5">

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.75"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/lrtbp_5"
                                        android:text="Flexi"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                        android:textColor="@color/red"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/lrtbp_5"
                                        android:text="Per day Cost Rs:5 per District"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                        android:textColor="@color/black"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/lrtbp_5"
                                        android:text="Valid: 7 Days"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                        android:textColor="@color/black"
                                        android:textStyle="bold" />

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_gravity="center"
                                        android:layout_margin="@dimen/lrtbp_5"
                                        app:cardBackgroundColor="@android:color/holo_red_light"
                                        app:cardCornerRadius="@dimen/lrtbp_10"
                                        app:cardElevation="@dimen/lrtbp_5">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="@dimen/lrtbp_5"
                                            android:text="      Pay     "
                                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                            android:textColor="@color/white"
                                            android:textStyle="bold" />
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>

                                <TextView
                                    android:layout_width="@dimen/wh_2"
                                    android:layout_height="fill_parent"
                                    android:layout_margin="@dimen/lrtbp_5"
                                    android:background="@color/red" />

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.78"
                                    android:text="RS: 35 /-"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                    android:textColor="@color/red"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/lrtbp_5"
                            android:layout_weight="1.0"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardCornerRadius="5.0dip"
                            app:cardElevation="@dimen/lrtbp_5">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="@dimen/lrtbp_5">

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.75"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/lrtbp_5"
                                        android:text="Pro Plan"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                        android:textColor="@color/red"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/lrtbp_5"
                                        android:text="Per day Cost Rs:4.50 per District"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                        android:textColor="@color/black"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/lrtbp_5"
                                        android:text="Valid: 15 Days"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                        android:textColor="@color/black"
                                        android:textStyle="bold" />

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_gravity="center"
                                        android:layout_margin="@dimen/lrtbp_5"
                                        app:cardBackgroundColor="@android:color/holo_red_light"
                                        app:cardCornerRadius="@dimen/lrtbp_10"
                                        app:cardElevation="@dimen/lrtbp_5">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="@dimen/lrtbp_5"
                                            android:text="      Pay     "
                                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                            android:textColor="@color/white"
                                            android:textStyle="bold" />
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>

                                <TextView
                                    android:layout_width="@dimen/wh_2"
                                    android:layout_height="fill_parent"
                                    android:layout_margin="@dimen/lrtbp_5"
                                    android:background="@color/red" />

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.78"
                                    android:text="RS: 67.50 /-"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                    android:textColor="@color/red"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/lrtbp_5"
                            android:layout_weight="1.0"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardCornerRadius="5.0dip"
                            app:cardElevation="@dimen/lrtbp_5">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="@dimen/lrtbp_5">

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.75"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/lrtbp_5"
                                        android:text="Easy Plan"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                        android:textColor="@color/red"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/lrtbp_5"
                                        android:text="Per day Cost Rs:4 per District"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                        android:textColor="@color/black"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/lrtbp_5"
                                        android:text="Valid: 30 Days"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                        android:textColor="@color/black"
                                        android:textStyle="bold" />

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_gravity="center"
                                        android:layout_margin="@dimen/lrtbp_5"
                                        app:cardBackgroundColor="@android:color/holo_red_light"
                                        app:cardCornerRadius="@dimen/lrtbp_10"
                                        app:cardElevation="@dimen/lrtbp_5">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="@dimen/lrtbp_5"
                                            android:text="      Pay     "
                                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                            android:textColor="@color/white"
                                            android:textStyle="bold" />
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>

                                <TextView
                                    android:layout_width="@dimen/wh_2"
                                    android:layout_height="fill_parent"
                                    android:layout_margin="@dimen/lrtbp_5"
                                    android:background="@color/red" />

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.78"
                                    android:text="RS: 120 /-"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                    android:textColor="@color/red"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/ad"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/lrtbp_10"
        android:layout_marginTop="@dimen/lrtbp_20"
        android:layout_marginRight="@dimen/lrtbp_10"
        android:layout_marginBottom="@dimen/lrtbp_10"
        android:visibility="gone"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="5.0dip"
        app:cardElevation="@dimen/lrtbp_5">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/wh_45"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lrtbp_20"
                    android:layout_marginRight="@dimen/lrtbp_20"
                    android:layout_marginBottom="@dimen/lrtbp_10"
                    android:background="@drawable/spinner_bg1"
                    android:padding="@dimen/lrtbp_10"
                    android:text="மாவட்டத்தை தேர்வு செய்க"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lrtbp_20"
                    android:layout_marginRight="@dimen/lrtbp_20"
                    android:layout_marginBottom="@dimen/lrtbp_5"
                    android:background="@drawable/spinner_bg1"
                    android:padding="@dimen/lrtbp_10"
                    android:text="வகையை தேர்வு செய்க"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lrtbp_20"
                    android:layout_marginTop="@dimen/lrtbp_5"
                    android:layout_marginRight="@dimen/lrtbp_20"
                    android:layout_marginBottom="@dimen/lrtbp_10"
                    android:background="@drawable/border_line1"
                    android:padding="@dimen/lrtbp_5">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="fill_parent"
