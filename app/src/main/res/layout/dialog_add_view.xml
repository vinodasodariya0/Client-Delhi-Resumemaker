<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#88000000"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/lrtbp_10"
        android:layout_marginRight="@dimen/lrtbp_10"
        android:layout_marginBottom="@dimen/lrtbp_30"
        android:layout_weight="1.0"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="10.0dip"
        app:cardElevation="16.0dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:padding="@dimen/lrtbp_5"
                android:text="Add a new Field"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                style="@android:style/Widget.EditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lrtbp_15"
                android:layout_marginTop="@dimen/lrtbp_10"
                android:layout_marginRight="@dimen/lrtbp_15"
                android:layout_marginBottom="@dimen/lrtbp_10"
                android:background="@drawable/border_line"
                android:hint="Select Your Title..."
                android:padding="@dimen/lrtbp_10"
                android:singleLine="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lrtbp_15"
                android:layout_marginTop="@dimen/lrtbp_10"
                android:layout_marginRight="@dimen/lrtbp_15"
                android:layout_marginBottom="@dimen/lrtbp_10"
                android:background="@drawable/border_line"
                android:gravity="left"
                android:hint="Text here..."
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="5"
                android:overScrollMode="ifContentScrolls"
                android:padding="@dimen/lrtbp_10" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/lrtbp_10"
                android:singleLine="true">

                <ImageView
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/wh_40"
                    android:padding="@dimen/lrtbp_10"
                    android:src="@drawable/cancel_mark" />

                <ImageView
                    android:id="@+id/ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/wh_40"
                    android:padding="@dimen/lrtbp_10"
                    android:src="@drawable/check" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>